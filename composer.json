{
    "name": "sarala-io/sarala",
    "type": "library",
    "description": "Laravel RESTful API Companion",
    "keywords": [
        "sarala-io",
        "sarala",
        "RESTful",
        "REST",
        "API"
    ],
    "homepage": "https://github.com/sarala-io/sarala",
    "license": "MIT",
    "authors": [
        {
            "name": "Milroy E. Fraser",
            "email": "milroy.me@gmail.com",
            "homepage": "https://milroy.me",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^7.2",
        "illuminate/database": "^5.8|^6.0",
        "illuminate/http": "^5.8|^6.0",
        "league/fractal": "^0.18.0"
    },
    "require-dev": {
        "orchestra/testbench": "^3.8|^4.0",
        "phpunit/phpunit": "^8.0",
        "squizlabs/php_codesniffer": "^3.0"
    },
    "autoload": {
        "psr-4": {
            "Sarala\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Sarala\\": "tests"
        }
    },
    "scripts": {
        "test": "phpunit",
        "check-style": "phpcs src tests",
        "fix-style": "phpcbf src tests"
    },
    "extra": {
        "laravel": {
            "providers": [
                "Sarala\\SaralaServiceProvider"
            ]
        },
        "branch-alias": {
            "dev-master": "1.0-dev"
        }
    },
    "config": {
        "sort-packages": true
    }
}
